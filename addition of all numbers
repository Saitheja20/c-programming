//sum of digits use
#include<stdio.h>
 int recursive_num(int sai);
int main(){
    int i,result;
    printf("enter a number");
    scanf("%d",&i);
    result=recursive_num(i);
    printf("result:%d \n",result);
    return 0;
}
 int recursive_num(int sai){
    int reverse,sum=0;
    while(sai!=0){
        reverse=sai%10;
        //for sum of digits use 
        //sum=sum+reverse
        //for multiple of degits
        //sum=sum*reverse
        //for reverse an input number
        //sum=sum+reverse
        sum=sum*reverse;
        sai=sai/10;
    }
    return sum;
}
